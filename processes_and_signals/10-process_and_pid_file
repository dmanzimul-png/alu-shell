#!/usr/bin/env bash
#
# 10-process_and_pid_file
# Creates a PID file, handles signals, and prints messages

# Create PID file
echo $$ > /var/run/myscript.pid

# Trap SIGINT (Ctrl+C)
trap 'echo "Y U no love me?! "' SIGINT

# Trap SIGTERM → print message AND delete PID file & exit
trap 'echo "I hate the kill command"; rm -f /var/run/myscript.pid; exit' SIGTERM

# Trap SIGQUIT → delete PID file & exit
trap 'rm -f /var/run/myscript.pid; exit' SIGQUIT

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done

